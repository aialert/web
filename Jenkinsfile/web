pipeline {
    agent any
    
   

    stages {
        stage('代码更新') {
            steps {
                sh "git checkout ${TAG}"
                sh "git show --stat"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                sh "cp -f index.html /var/jenkins_home/webroot/web/"
            }
        }
    }
}
